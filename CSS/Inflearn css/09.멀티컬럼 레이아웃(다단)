      /* 문장열이 가지런해진다. */
      column-gap:30px;
      /* 단의 간격을 조정 */
      
      column-rule-style:solid;
      column-rule-width: 5px;
      column-rule-color: red;
      /*단간격에 선이 생성된다. dotted dashed;*/
    }
    h1{
      column-span: all;
    }
  </style>
